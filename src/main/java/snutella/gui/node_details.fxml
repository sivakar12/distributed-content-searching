<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="title" text="SNUTELLA" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Droid Serif" size="24.0" />
               </font>
            </Label>
            <VBox BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Neigibors">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Label>
                  <Label fx:id="neighborDetails" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <HBox>
                     <children>
                        <Label text="Files">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <Button fx:id="refreshFilesButton" mnemonicParsing="false" onAction="#refreshFiles" text="Refresh" />
                     </children>
                  </HBox>
                  <Label fx:id="filesList" text="" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox VBox.vgrow="ALWAYS">
               <children>
                  <HBox>
                     <children>
                        <Label text="Logs">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <Button onAction="#clearLogs" text="Clear" />
                     </children>
                  </HBox>
                  <ScrollPane VBox.vgrow="ALWAYS">
                     <Label fx:id="logs" />
                  </ScrollPane>
               </children>
            </VBox>
            <VBox VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Query">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <HBox>
                     <children>
                        <TextField fx:id="queryText" />
                        <Button mnemonicParsing="false" onAction="#runQuery" text="Search" />
                     </children>
                  </HBox>
                  <Label text="No results" fx:id="queryResults" VBox.vgrow="ALWAYS"/>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
